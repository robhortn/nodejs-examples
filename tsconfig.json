{
  "compilerOptions": {
    "module": "commonjs",
    "strictNullChecks": true,    
    "target": "es6",
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "express", "body-parser"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "build",
    "dist",
    "node_modules"
  ]
}